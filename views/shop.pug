extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/products.css")

block content
  if products.length > 0
    .grid 
      each product in products
        article.card.product-item
          header.card__header
            h1.product_title #{product.title}
          div.card__image
            img(src="https://creativebonito.com/wp-content/uploads/2018/07/Free-Book-Cover-Mockup.jpg", alt="Product image")
          div.card__content
            h2.product_price $20.99
            p.product_description product description
          .card__actions
            button.btn Add to Cart
  else
    h1 No products found

