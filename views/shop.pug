extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/products.css")

block content
  if products.length > 0
    .grid 
      each product in products
        article.card.product-item
          header.card__header
            h1.product_title #{product.title}
          div.card__image
            img(src="https://cdn.newsapi.com.au/image/v1/8791f511b22d3b0abb8b52c575bff083?width=650", alt="Product image")
          div.card__content
            h2.product_price $20.99
            p.product_description product description
          .card__actions
            button.btn Add to Cart
  else
    h1 No products found

