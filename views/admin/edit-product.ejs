<%- include ('../partials/header.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include ('../partials/navigation.ejs') %>

    <main>
      <form class="product-form" action="/admin/<% if (editing) { %>edit<% } else { %>add<% } %>-product" method="post">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<% if (editing) { %><%= product.title %><% } %>" />
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input type="text" id="imageUrl" name="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>" />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" id="price" name="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="5" value><% if (editing) { %><%= product.description %><% } %></textarea>
        </div>
        <% if (editing) { %>
          <input type="hidden" name="productId" value="<%= product._id %>" />
        <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">
          <% if (editing) { %>Update<% } else { %>Add<% } %> Product
        </button>
      </form>
    </main>
    
<%- include ('../partials/footer.ejs') %>
